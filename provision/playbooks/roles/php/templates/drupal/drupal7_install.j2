# Move into the site directory.
cd /var/www/site/

# Download the latest stable drupal version into webroot.
drush dl --drupal-project-rename=webroot --yes

# Create a settings.php file.
cp webroot/sites/default/default.settings.php webroot/sites/default/settings.php

# Create some directories.
mkdir webroot/sites/default/files
mkdir webroot/sites/all/modules/contrib
mkdir webroot/sites/all/modules/custom

# Install Drupal using drush.
cd webroot
drush site-install --db-url=mysql://{{ dbuser }}:{{ dbpass }}@localhost/{{ dbname }} --account-name=admin --account-pass=password --yes

# Disable the overlay module.
drush dis overlay --yes
